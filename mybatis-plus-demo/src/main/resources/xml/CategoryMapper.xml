<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fisher.mybatis.demo.mapper.CategoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.fisher.mybatis.demo.entity.Category">
        <id column="id" property="id" />
        <result column="category_name" property="categoryName" />
        <result column="parent_id" property="parentId" />
    </resultMap>

    <resultMap id="ExtendBaseResultMap" extends="BaseResultMap" type="com.fisher.mybatis.demo.entity.CategoryChildrenItem">
        <collection property="children" select="categoryListById" column="id"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, category_name, parent_id
    </sql>

    <select id="categoryListById" resultMap="ExtendBaseResultMap">
        SELECT
            <include refid="Base_Column_List"/>
                FROM category WHERE parent_id = #{id}
    </select>

</mapper>
